@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Aultcare.Models.GenreNameGroup>

@{
    ViewBag.Title = "Genre Statistics";
}

<style type="text/css">

    th, td, table
    {

        width: 50%;

    }

    table
    {

        margin-left:auto; 
        margin-right:auto;

    }

</style>

<h2>Genre Statistics</h2>

<table>
    <tr>
        <th>
            Genre
        </th>
        <th>
            Number of Movies
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @item.GenreCount
            </td>
        </tr>
    }

</table>